<!DOCTYPE html>
<html>
<head>
  <title>BlindFolded Home</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- favicon -->
  <link rel="icon" href="/assets/Blindfolded_logo.png" type="image/x-icon"/>
</head>
<body>

  <div id="page" class="container">

    <%= render partial: 'layouts/shared/header' %>

    <div class="row">
      <%= render partial: 'layouts/shared/menu_home' %>

      <div class="col-md-9">
        <%= yield %>
      </div>
    </div>

  </div>

  <%= render partial: 'layouts/shared/footer' %>

  <script>
  <% if notice %>
    $.notify("<%= notice %>", "success");
  <% end %>
  </script>

</body>
</html>
