<!DOCTYPE html>
<html>
<head>
  <title>BlindFolded Login</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag    'application_devise' %>
  <%= javascript_include_tag 'application_devise' %>
  <%= csrf_meta_tags %>

  <!-- favicon -->
  <link rel="icon" href="/assets/Blindfolded_logo.png" type="image/x-icon"/>
</head>
<body>

  <div id="page" class="container">

    <%= render partial: 'layouts/shared/header' %>

    <%= yield %>

  </div>

  <%= render partial: 'layouts/shared/footer' %>

  <script>
  <% if notice %>
    $.notify("<%= notice %>", "success");
  <% end %>
  </script>

</body>
</html>
