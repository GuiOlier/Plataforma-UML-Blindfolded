<div class="modal fade" id="modalEditTransition" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Editando Transição</h4>
      </div>

      <%= form_tag(state_transition_path, method: 'put', class:"form-inline", id:'formTransitionEdit') do %>
      <div class="modal-body text-center">
        <div class="form-group">
          <%= label_tag :elemStart %><br>
          <%= select_tag(:elemStart, options_from_collection_for_select(@options_elements, "id", "nameElem"), class:'form-control', id:'elemStart') %>
        </div>
        <div class="form-group">
        <%= label_tag :elemEnd %><br>
          <%= select_tag(:elemEnd, options_from_collection_for_select(@options_elements, "id", "nameElem"), class: 'form-control', id:'elemEnd') %>
        </div>
        <div class="form-group">
          <%= label_tag :descriptionTran %><br>
          <%= text_field_tag :descriptionTran,nil,class:"form-control text-description", id:'descriptionTran' %>
        </div>
        <div class="form-group hide">
          <%= text_field_tag :machine_id, nil, class:"form-control", readonly: true, id:'machine_id' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger pull-left" onclick="TransitionDestroy()"><%= t('buttons.destroy') %></button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('buttons.close') %></button>
        <%= submit_tag "#{t('buttons.save')}", class:"btn btn-primary btn-modal-element" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
