<div class="modal fade" id="modalTransition" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('messages.new_transition') %></h4>
      </div>

      <%= form_tag(state_transitions_path, method: 'post', class:"form-inline") do %>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12 text-center">
            <div class="form-group">
              <%= label_tag :elemStart %><br>
              <%= select_tag(:elemStart, options_from_collection_for_select(@options_elements, "id", "nameElem"), class:'form-control', id:'targetTransition') %>
            </div>
            <div class="form-group">
            <%= label_tag :elemEnd %><br>
              <%= select_tag(:elemEnd, options_from_collection_for_select(@options_elements, "id", "nameElem"), class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= label_tag :descriptionTran %><br>
              <%= text_field_tag :descriptionTran,nil,class:"form-control text-description" %>
            </div>
            <div class="form-group hide">
              <%= text_field_tag :machine_id, @machine.id, class:"form-control", readonly: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('buttons.close') %></button>
        <%= submit_tag "#{t('buttons.save')}", class:"btn btn-primary btn-modal-transition" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
